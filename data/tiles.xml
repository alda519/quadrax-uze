<?xml version="1.0" ?>
<gfx-xform version="1">
    <input file="../data/tiles.png" type="png" tile-width="6" tile-height="8" width="60" height="160" />
    <output file="../data/tiles.inc">

    <tiles var-name="quadTiles"/>

    <maps pointers-size="8">

    <map var-name="map_boulder" left="4" top="0" width="2" height="2"/>
    <map var-name="map_finish" left="0" top="1" width="2" height="1"/> 

    <!-- Elevator -->
    <map var-name="map_elevator_t" left="8" top="0" width="2" height="1"/> 
    <map var-name="map_elevator_b" left="8" top="1" width="2" height="1"/> 

    <!-- Players fron view -->
    <map var-name="map_playerBlue" left="2" top="0" width="1" height="2"/>
    <map var-name="map_playerRed" left="3" top="0" width="1" height="2"/>
    
    <!-- Blue Player walk right -->
    <map var-name="map_playerBlue_m1r" left="0" top="2" width="2" height="2"/>
    <map var-name="map_playerBlue_m2r" left="2" top="2" width="1" height="2"/>
    <map var-name="map_playerBlue_m3r" left="3" top="2" width="2" height="2"/>
    
    <!-- Blue Player walk left -->
    <map var-name="map_playerBlue_m1l" left="5" top="2" width="2" height="2"/>
    <map var-name="map_playerBlue_m2l" left="7" top="2" width="1" height="2"/>
    <map var-name="map_playerBlue_m3l" left="8" top="2" width="2" height="2"/>
    
    <!-- Red Player walk right -->
    <map var-name="map_playerRed_m1r" left="0" top="4" width="2" height="2"/>
    <map var-name="map_playerRed_m2r" left="2" top="4" width="1" height="2"/>
    <map var-name="map_playerRed_m3r" left="3" top="4" width="2" height="2"/>
    
    <!-- Red Player walk left -->
    <map var-name="map_playerRed_m1l" left="5" top="4" width="2" height="2"/>
    <map var-name="map_playerRed_m2l" left="7" top="4" width="1" height="2"/>
    <map var-name="map_playerRed_m3l" left="8" top="4" width="2" height="2"/>

    <!-- Fall animation -->
    <map var-name="map_playerBlue_f1" left="0" top="6" width="1" height="2"/>
    <map var-name="map_playerBlue_f2" left="1" top="6" width="1" height="2"/>
    <map var-name="map_playerBlue_f3" left="2" top="6" width="1" height="2"/>
    <map var-name="map_playerBlue_f4" left="6" top="6" width="1" height="3"/>
    <map var-name="map_playerBlue_f5" left="7" top="6" width="1" height="3"/>
    <map var-name="map_playerRed_f1" left="3" top="6" width="1" height="2"/>
    <map var-name="map_playerRed_f2" left="4" top="6" width="1" height="2"/>
    <map var-name="map_playerRed_f3" left="5" top="6" width="1" height="2"/>
    <map var-name="map_playerRed_f4" left="8" top="6" width="1" height="3"/>
    <map var-name="map_playerRed_f5" left="9" top="6" width="1" height="3"/>

    <!-- Climbing left down / right up -->
    <map var-name="map_playerBlue_cl1" left="1" top="9" width="1" height="1"/>
    <map var-name="map_playerBlue_cl2" left="0" top="10" width="2" height="1"/>
    <map var-name="map_playerBlue_cl3" left="0" top="8" width="2" height="1"/>
    <map var-name="map_playerBlue_cl4" left="0" top="9" width="1" height="1"/>
    <map var-name="map_playerBlue_cl5" left="2" top="8" width="1" height="3"/>
    <map var-name="map_playerBlue_cl6" left="6" top="9" width="1" height="2"/>

    <map var-name="map_playerRed_cl1" left="1" top="12" width="1" height="1"/>
    <map var-name="map_playerRed_cl2" left="0" top="13" width="2" height="1"/>
    <map var-name="map_playerRed_cl3" left="0" top="11" width="2" height="1"/>
    <map var-name="map_playerRed_cl4" left="0" top="12" width="1" height="1"/>
    <map var-name="map_playerRed_cl5" left="2" top="11" width="1" height="3"/>
    <map var-name="map_playerRed_cl6" left="8" top="9" width="1" height="2"/>

    <!-- Climbing right down / left up -->
    <map var-name="map_playerBlue_cr1" left="4" top="9" width="1" height="1"/>
    <map var-name="map_playerBlue_cr2" left="4" top="10" width="2" height="1"/>
    <map var-name="map_playerBlue_cr3" left="4" top="8" width="2" height="1"/>
    <map var-name="map_playerBlue_cr4" left="5" top="9" width="1" height="1"/>
    <map var-name="map_playerBlue_cr5" left="3" top="8" width="1" height="3"/>
    <map var-name="map_playerBlue_cr6" left="7" top="9" width="1" height="2"/>

    <map var-name="map_playerRed_cr1" left="4" top="12" width="1" height="1"/>
    <map var-name="map_playerRed_cr2" left="4" top="13" width="2" height="1"/>
    <map var-name="map_playerRed_cr3" left="4" top="11" width="2" height="1"/>
    <map var-name="map_playerRed_cr4" left="5" top="12" width="1" height="1"/>
    <map var-name="map_playerRed_cr5" left="3" top="11" width="1" height="3"/>
    <map var-name="map_playerRed_cr6" left="9" top="9" width="1" height="2"/>

    <!-- pushing boulder -->
    <map var-name="map_playerBlue_pr" left="6" top="11" width="4" height="2"/>
    <map var-name="map_playerBlue_pl" left="6" top="13" width="4" height="2"/>
    <map var-name="map_playerBlue_pr1" left="4" top="14" width="1" height="2"/>
    <map var-name="map_playerBlue_pl1" left="5" top="14" width="1" height="2"/>

    <map var-name="map_playerRed_pr" left="0" top="14" width="4" height="2"/>
    <map var-name="map_playerRed_pl" left="0" top="16" width="4" height="2"/>
    <map var-name="map_playerRed_pr1" left="4" top="16" width="1" height="2"/>
    <map var-name="map_playerRed_pl1" left="5" top="16" width="1" height="2"/>

    <!-- walking up stairs -->
    <map var-name="map_playerBlue_sr" left="6" top="15" width="1" height="2"/>
    <map var-name="map_playerBlue_sl" left="7" top="15" width="1" height="2"/>
    <map var-name="map_playerRed_sr" left="8" top="15" width="1" height="2"/>
    <map var-name="map_playerRed_sl" left="9" top="15" width="1" height="2"/>


    </maps>
    </output>
</gfx-xform>
